<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="matvidako.supertrianglecalculator"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/triangle_blue"
        android:label="@string/app_name_short" >
        
        <activity
            android:name="matvidako.supertrianglecalculator.main.MainActivity"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme"
            android:uiOptions="splitActionBarWhenNarrow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="matvidako.supertrianglecalculator.calculator.CalculatorActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name_short"
            android:theme="@style/AppTheme"
            android:uiOptions="splitActionBarWhenNarrow" >
        </activity>
    </application>

</manifest>